    <div class="col-3 tagsShow" style="color: #9B6A6C"><%= @tag.name %> :</div>
    <div class="col-9">
        <div class="row">
            <% @posts.each do |tag| %>
                <div class="col-4 wordsByAlphabet mb-5" >
                    <%= link_to tag.word.downcase, post_path(tag.id) %>
                </div>
            <% end %>
        </div>
    </div>
    </div>
</div>